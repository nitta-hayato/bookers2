<div class="col-xs-3">
<%= render partial: 'users/info', locals: { user: @user, book: @book } %>
</div>

<h1>Books      user show </h1>
<div class="col-xs-9">
<table class="table">
  <thead>
  <th></th>
  <th>Title</th>
  <th>Option</th>
  </thead>
  <tbody>
    <% @user.books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag @users, :profile_image, format: 'jpeg', size: "40x40", fallback: "no_image.jpg" %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>



