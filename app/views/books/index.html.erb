<div class="col-xs-3">
<%= render partial: 'users/info', locals: { user: @user, book: @book } %>
</div>


<h1>Books  (book index)</h1>
<div class="col-xs-9">
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Option</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to user_path(book.user) do %>
        <%= attachment_image_tag book.user, :image, format: 'jpeg', size: "40x40", fallback: "no_image.jpg" %>
        <% end %>
       </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>


