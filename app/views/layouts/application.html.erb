<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<header class="navbar navbar-inverse">
  <div class="container">
    <nav class="nav navbar-nav navbar-left">
     
      <span class="navbar-brand" >
        Bookers
      </span>
    </nav>
    
    <nav>
       <ul class="nav navbar-nav navbar-right" >
    <% if user_signed_in? %>
      <li class="">
        <%= link_to "Home", user_path(current_user.id) , class: "glyphicon glyphicon-star" %>
      </li>
      <li class="">
        <%= link_to 'Users',users_path , class: "glyphicon glyphicon-star" %>
      </li>
      <li class="">
        <%= link_to 'Books',books_path , class: "glyphicon glyphicon-star"%>
      </li>
       <li class="">
        <%= link_to "logout",destroy_user_session_path, method: :delete , class: "glyphicon glyphicon-star" %>
      </li>
    <% else %>
      <li class="">
        <%= link_to "Home",root_path , class: "glyphicon glyphicon-star" %>
      </li>
      <li class="">
        <%= link_to "About", home_about_path , class: "glyphicon glyphicon-star" %>
      </li>
      <li class="">
        <%= link_to "sign up", new_user_registration_path , class: "glyphicon glyphicon-star"  %>
      </li>
      <li class="">
        <%= link_to "login", new_user_session_path , class: "glyphicon glyphicon-star"  %>
      </li>
    <% end %>
  </ul>
</nav>
      
    </div>
  </div>
</header>
</div>
<dev class="container">

<p id="notice"><%= notice %></p>
<div class="row">
<%= yield %>
</div>
</div>
  </body>
</html>

